<div class="container-fluid">
  <div class="row">
    <div class="col-md-4 mt-3">
      <div class="card h-100 border-0 shadow-none d-flex flex-column">
        <div class="card-body d-flex flex-column p-3">
          <h4>Fil d'actualité</h4>
        </div>
        <div class="text-center mt-auto">
        </div>
      </div>
    </div>

    <div class="col-md-5 mt-3">
      <div class="card border-0 shadow-none d-flex flex-column">
        <div class="card-body d-flex flex-column h-100 p-4">
          <h4>Mes derniers favoris</h4>
          <div class="row">
            <% @favorites.each do |favorite| %>
              <div class="col-md-6 mt-3">
                <div class="card-oui card border-0 h-100 d-flex flex-column">
                  <div class="card-favorite d-flex flex-column h-100 p-3">
                    <h5 class="card-title">
                      <%= link_to favorite.name, favorite_path(favorite), class: 'text-decoration-none text-dark' %>
                    </h5>
                    <p class="card-text">
                      <%= truncate(favorite.description, length: 60) %>
                    </p>
                    <div class="mt-auto">
                      <p class="card-text">
                        <strong>Price:</strong> <%= number_to_currency(favorite.price, unit: "€") %><br>
                        <strong>Size:</strong> <%= favorite.size %>
                      </p>
                      <%= link_to 'Voir plus', favorite_path(favorite), class: 'btn btn-main mt-2 btn-sm w-100' %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
          <div class="text-center mt-auto">
            <%= link_to "Tous mes favoris", favorites_path, class: 'btn btn-main mt-4 mb-3' %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-3 mt-3">
      <div class="card h-100 border-0 shadow-none d-flex flex-column">
        <div class="card-body d-flex flex-column flex-grow-1 p-3">
          <h4>Mes dernières listes</h4>
          <div class="d-flex flex-wrap">
            <% @lists.each do |list| %>
              <div class="card-oui card border-0 shadow-none d-flex flex-row align-items-center mt-4 p-3" style="flex: 1 0 282px; max-width: 282px;"> <!-- Conserver la classe card-oui -->
                <div class="card-favorite d-flex flex-row align-items-center justify-content-between">
                  <h6 class="card-title mb-0 me-2">
                    <%= link_to list.name, list_path(list), class: 'text-decoration-none text-dark' %>
                  </h6>
                  <%= link_to list_path(list) do %>
                    <i class="fa-solid fa-arrow-right" style="color: #EB4511; font-size: 1.5em;"></i>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
          <div class="mt-auto text-center">
            <%= link_to "Toutes mes listes", lists_path, class: 'btn btn-main mt-2 mb-3' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
