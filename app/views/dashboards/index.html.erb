<div class="container-fluid">
  <div class="row">

    <div class="col-md-3 mt-3 d-flex flex-column">

      <div class="card mb-3 border-0 shadow-none d-flex flex-column">
        <div class="card-body d-flex flex-column p-3 m-2">
          <h4>Mon profil</h4>
          <div class="card-oui text-center mt-4 p-3">
            <h5><%= current_user.first_name %> <%= current_user.last_name %></h5>
            <p class="text-muted">Nom d'utilisateur: <%= current_user.user_name %></p>
            <p class="text-muted"><%= current_user.email %></p>
          </div>
        </div>
      </div>
    </div>


   <div class="col-md-5 mt-3">
  <div class="card border-0 shadow-none d-flex flex-column">
    <div class="card-body d-flex flex-column h-100 p-4">
      <h4>Mes derniers favoris</h4>
      <div class="row">
        <% @favorites.last(4).each do |favorite| %>
          <div class="col-md-6 mt-4">
            <%= link_to favorite_path(favorite), class: 'text-decoration-none' do %>
              <div class="card-oui card border-0 h-100 d-flex flex-column">
                <div class="card-favorite d-flex flex-column h-100 p-3">
                  <h6 class="card-title">
                    <%= favorite.name %>
                  </h6>
                  <p class="card-text">
                    <%= truncate(favorite.description, length: 60) %>
                  </p>
                  <div class="mt-auto d-flex justify-content-between align-items-center">
                    <p class="card-text">
                      <strong>Price:</strong> <%= number_to_currency(favorite.price, unit: "€") %><br>
                      <strong>Size:</strong> <%= favorite.size %>
                    </p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="text-center mt-5">
        <%= link_to favorites_path, class: 'text-decoration-none d-flex align-items-center' do %>
          <i class="fa-solid fa-arrow-right link-icon"></i>
          <span class="link-text">Tous mes favoris</span>
        <% end %>
      </div>
    </div>
  </div>
</div>




    <div class="col-md-4 mt-3">
      <div class="card h-100 border-0 shadow-none d-flex flex-column">
        <div class="card-body d-flex flex-column p-3">
          <h4>Fil d'actualité</h4>
        </div>
        <div class="text-center mt-auto">
        </div>
      </div>
    </div>
  </div>


  <div class="row mt-3">
    <div class="col-12">
      <div class="card border-0 d-flex flex-column">
        <div class="card-body d-flex flex-column p-3">
          <h4>Mes dernières listes</h4>
          <div class="d-flex flex-wrap">
            <% @lists.each do |list| %>
              <%= link_to list_path(list), class: 'text-decoration-none' do %>
                <div class="card-oui card border-0 d-flex flex-row align-items-center mt-4 p-3 flex-grow-1" style="flex: 1 1 auto; width: 100%;">
                  <div class="card-favorite d-flex flex-row align-items-center justify-content-between w-100">
                    <h6 class="card-title mb-0 me-2">
                      <%= list.name %>
                    </h6>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
          <div class="mt-auto text-center">
            <%= link_to "Toutes mes listes", lists_path, class: 'btn btn-main mt-2 mb-3' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
