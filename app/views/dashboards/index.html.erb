<div class="container-fluid">
  <div class="row mt-3">
    <div class="col-md-3 mt-3">
      <div class="card border-0 shadow-none">
        <div class="card-body p-3 mt-2">
          <h4>Mon profil</h4>
          <div class="card-oui text-center mt-4 p-3">
            <div class="avatar-container d-flex justify-content-center mb-3">
              <img src="<%= current_user.avatar %>" alt="Avatar" class="avatar-profil">
            </div>
            <h5><%= current_user.first_name %> <%= current_user.last_name %></h5>
            <p class="text-muted">Nom d'utilisateur: <%= current_user.user_name %></p>
            <p class="text-muted"><%= current_user.email %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-5 mt-3">
      <div class="card border-0 shadow-none d-flex flex-column">
        <div class="card-body p-4">
          <h4>Mes derniers favoris</h4>
          <div class="row">
            <% @favorites.last(4).each do |favorite| %>
              <div class="col-md-6 mt-4">
                <%= link_to favorite_path(favorite),
                            class: 'text-decoration-none',
                            data: { turbo_frame: "favorite_modal_frame", bs_toggle: "modal", bs_target: "#favoriteModal" } do %>
                  <div class="card-oui card border-0 square-card d-flex flex-column">
                    <div class="card-favorite p-3">
                      <h6 class="card-title"><%= favorite.name %></h6>
                      <p class="card-text"><%= truncate(favorite.description, length: 60) %></p>
                      <div class="mt-auto d-flex justify-content-between align-items-center">
                        <p class="card-text">
                          <strong>Price:</strong> <%= number_to_currency(favorite.price, unit: "€") %><br>
                          <strong>Size:</strong> <%= favorite.size %>
                        </p>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
          <div class="text-center mt-5">
            <%= link_to favorites_path, class: 'text-decoration-none d-flex align-items-center' do %>
              <i class="fa-solid fa-arrow-right link-icon"></i>
              <span class="link-text">Tous mes favoris</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-4 mt-3">
      <div class="card h-100 border-0 shadow-none d-flex flex-column">
        <div class="card-body p-3">
          <h4>Fil d'actualité</h4>
        </div>
        <div class="text-center mt-auto"></div>
      </div>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-12">
      <div class="card border-0 d-flex flex-column">
        <div class="card-body p-3">
          <h4>Mes dernières listes</h4>
          <% @lists.each do |list| %>
            <div class="card border-0 d-flex flex-column mt-4 p-3">
              <div class="card-body">
                <h6 class="link-text mb-3 ms-2">
                  <%= link_to list.name, list_path(list) %>
                </h6>
                <div class="d-flex overflow-auto">
                  <% if list.favorites.any? %>
                    <div class="d-flex flex-nowrap">
                      <% list.favorites.each do |favorite| %>
                        <div class="square-card-wrapper mx-2">
                          <%= link_to favorite_path(favorite),
                                      class: 'text-decoration-none',
                                      data: { turbo_frame: "favorite_modal_frame", bs_toggle: "modal", bs_target: "#favoriteModal" } do %>
                            <div class="card-oui card border-0 square-card d-flex flex-column">
                              <div class="card-favorite p-3">
                                <h6 class="card-title"><%= favorite.name %></h6>
                                <p class="card-text"><%= truncate(favorite.description, length: 60) %></p>
                                <div class="mt-auto d-flex justify-content-between align-items-center">
                                  <p class="card-text">
                                    <strong>Price:</strong> <%= number_to_currency(favorite.price, unit: "€") %><br>
                                    <strong>Size:</strong> <%= favorite.size %>
                                  </p>
                                </div>
                              </div>
                            </div>
                          <% end %>
                        </div>
                      <% end %>
                    </div>
                  <% else %>
                    <p>Aucun favori dans cette liste.</p>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
          <div class="text-center mt-3 ms-5">
            <%= link_to lists_path, class: 'text-decoration-none d-flex align-items-center' do %>
              <i class="fa-solid fa-arrow-right link-icon"></i>
              <span class="link-text">Toutes mes listes</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="modal fade" id="favoriteModal" tabindex="-1" aria-labelledby="favoriteModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="favoriteModalLabel">Détails du favori</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <turbo-frame id="favorite_modal_frame">
        <div class="modal-body">
        </div>
      </turbo-frame>
    </div>
  </div>
</div>
