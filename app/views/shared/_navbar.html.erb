            </li>
            <li class="nav-item">
              <%= link_to "#", class: "nav-link btn-vp mx-2 px-3" do %>
                <i class="fa-brands fa-chrome"></i>
                Télécharger l'extension
              <% end %>
            </li>
          <%# else %>
            <!--li class="nav-item"-->
              <%#= link_to "Login", new_user_session_path, class: "nav-link" %>
