<!-- Button trigger modal -->
<button type="button" class="btn btn-vp py-2 px-4 m-2" data-bs-toggle="modal" data-bs-target="#createList">
  Créer une nouvelle liste
</button>

<!-- Modal -->
<div class="modal fade" id="createList" tabindex="-1" aria-labelledby="createListLabel" aria-hidden="true" data-turbo="false">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="createListLabel">Créer une nouvelle liste</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= simple_form_for(list, html: { data: { turbo: false } }) do |f| %>
        <%= f.input :name, :label => 'Nom', label_html: {class: "fs-20px"} %>
        <%= f.input :public, :label => 'Publique', input_html: { class: "toggle" } %>
        <button type="button" class="btn btn-main" data-bs-dismiss="modal">Fermer</button>
        <%= f.submit "Créer une liste", class: "btn btn-main" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
